# Dashboard Environment Configuration Example
# Copy this file to .env.local and configure your settings

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_API=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=false

# Referee Configuration (weights must sum to 1.0)
NEXT_PUBLIC_DEFAULT_CARBON_WEIGHT=0.4
NEXT_PUBLIC_DEFAULT_LATENCY_WEIGHT=0.4
NEXT_PUBLIC_DEFAULT_COST_WEIGHT=0.2

# Data Sources (configure if using external APIs)
NEXT_PUBLIC_ELECTRICITY_MAPS_API_URL=https://api.electricitymap.org/v3
NEXT_PUBLIC_AWS_PRICING_API_URL=https://pricing.us-east-1.amazonaws.com

# Performance Settings (in milliseconds)
NEXT_PUBLIC_REGION_EVALUATION_TIMEOUT=15000
NEXT_PUBLIC_BATCH_EVALUATION_TIMEOUT=30000
NEXT_PUBLIC_CACHE_TTL=300000

# UI Settings
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false
NEXT_PUBLIC_THEME_MODE=dark

# Development Settings
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_LOG_LEVEL=info